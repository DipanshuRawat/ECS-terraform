{
  "family": "medusa-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::376129882686:role/ecsTaskExecutionRole",
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "medusa",
      "image": "${aws_ecr_repository.medusa_repo.repository_url}:latest",
      "essential": true,
      "portMappings": [
        {
          containerPort = 9000,
          hostPort      = 9000
        }
      ]
    }
  ]
}
